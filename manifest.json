{
    "manifest_version": 3,
    "name": "My Chart Test Result Chat Automation",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "scripting",
      "tabs",
      "storage",
      "sidePanel"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://secure.mypennmedicine.org/MyPennMedicine/app/test-results"],
        "js": ["content.js"]
      }
    ],
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "host_permissions": [
      "https://secure.mypennmedicine.org/*",
      "https://chatgpt.com/*"
    ],
    "action": {
      "default_popup": "sidepanel.html"
    }
  }